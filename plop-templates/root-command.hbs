import {Args, Command, Flags} from '@oclif/core'

export default class {{pascalCase command}} extends Command {
  static description = '{{description}}'

  static examples = [
    `$ growthbook {{kebabCase command}} friend --from oclif
hello friend from oclif! (./src/commands/hello/index.ts)
`,
  ]

  static flags = {
    from: Flags.string({
      char: 'f',
      description: 'Who is saying hello',
      required: true,
    }),
  }

  static args = {
    person: Args.string({
      description: 'Person to say hello to',
      required: true,
    }),
  }

  async run(): Promise<void> {
    const {args, flags} = await this.parse({{pascalCase command}})

    this.log(`hello ${args.person} from ${flags.from}!`)

    this.log(`Run the following command for details: \n $ growthbook ${this.id} --help`)
  }
}
